<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.enterprise.limited.round.UI.Activity.MainActivity">


    <!--ViewPager-->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/ll_navigation"
        android:background="@color/colorLine"
        />





    /*autolayout屏幕适配*/
    <!--底部导航-->
    <LinearLayout
        android:id="@+id/ll_navigation"
        android:layout_width="match_parent"
        android:layout_height="98px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_marginLeft="59px"
            android:layout_width="42px"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="10px"
                android:id="@+id/home_0_icon_iv"
                android:src="@mipmap/home_0_icon"
                android:layout_width="42px"
                android:layout_height="42px"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="8px"
                android:textSize="10sp"
                android:text="首页"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_0_icon_iv"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="98px"
            android:layout_width="42px"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="10px"
                android:id="@+id/home_1_icon_iv"
                android:src="@mipmap/class_0_icon"
                android:layout_width="42px"
                android:layout_height="42px"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="8px"
                android:textSize="10sp"
                android:text="分类"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_1_icon_iv"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="98px"
            android:layout_width="42px"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="10px"
                android:id="@+id/home_2_icon_iv"
                android:src="@mipmap/earn_0_icon"
                android:layout_width="42px"
                android:layout_height="42px"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="8px"
                android:textSize="10sp"
                android:text="乐赚"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_2_icon_iv"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="98px"
            android:layout_width="42px"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="10px"
                android:id="@+id/home_3_icon_iv"
                android:src="@mipmap/shop_0_icon"
                android:layout_width="42px"
                android:layout_height="42px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="8px"
                android:textSize="10sp"
                android:text="购物"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_3_icon_iv"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="98px"
            android:layout_width="42px"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_marginTop="10px"
                android:id="@+id/home_4_icon_iv"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="42px"
                android:layout_height="42px"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginTop="8px"
                android:textSize="10sp"
                android:text="我的"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/home_4_icon_iv"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
